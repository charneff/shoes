<h1>Add a New Brand</h1>

<%= render partial: 'layouts/errors', locals: {object: @brand} %>

<%= form_for(@brand) do |f| %>
  <%= render partial: 'fields', locals: {f: f} %>
  <%= f.fields_for :shoes do |s|%>
    <%= s.label :price, "Price:" %>
    <%= s.number_field :price, min: 0, step: 0.01 %><br><br>
    <%= s.label :color, "Color:"%>
    <%= s.text_field :color  %><br><br>
    <%= s.label :limited_edition, "Limited Edition:" %>
    <%= s.check_box :limited_edition %><br><br>
  <%= f.submit  %>
<% end %>